{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "healthcheck": {
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]*$": {
          "additionalProperties": false,
          "properties": {
            "DeploymentUnits": {
              "contains": {
                "type": "string"
              },
              "description": "An singleton instance of the component, Instance & Version configuration.",
              "type": "array"
            },
            "Timeout": {
              "default": 30,
              "description": "How long a healthcheck should run without reporting status in seconds",
              "type": "object"
            },
            "Extensions": {
              "contains": {
                "type": "string"
              },
              "description": "Extensions to invoke as part of component processing",
              "type": "array"
            },
            "Instances": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "DeploymentUnits": {
                      "contains": {
                        "type": "string"
                      },
                      "description": "An singleton instance of the component, Instance & Version configuration.",
                      "type": "array"
                    },
                    "Versions": {
                      "patternProperties": {
                        "^[A-Za-z_][A-Za-z0-9_]*$": {
                          "additionalProperties": false,
                          "properties": {
                            "DeploymentUnits": {
                              "contains": {
                                "type": "string"
                              },
                              "description": "An singleton instance of the component, Instance & Version configuration.",
                              "type": "array"
                            }
                          }
                        }
                      },
                      "description": "Versions of the components instance.",
                      "type": "object"
                    }
                  }
                }
              },
              "description": "Instances of a component configuration",
              "type": "object"
            },
            "Type": {
              "description": "The type of healthcheck to perform",
              "type": "object",
              "enum": [
                "simple",
                "complex"
              ]
            },
            "NetworkAccess": {
              "default": false,
              "description": "Run the healthcheck within the private network",
              "type": "boolean"
            },
            "SettingNamespaces": {
              "patternProperties": {
                "^[A-Za-z_][A-Za-z0-9_]*$": {
                  "additionalProperties": false,
                  "properties": {
                    "Order": {
                      "contains": {
                        "type": "string"
                      },
                      "default": [
                        "Tier",
                        "Component",
                        "Type",
                        "SubComponent",
                        "Instance",
                        "Version",
                        "Name"
                      ],
                      "type": "array"
                    },
                    "IncludeInNamespace": {
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "SubComponent": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Type": {
                          "default": false,
                          "type": "boolean"
                        },
                        "Tier": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Instance": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Version": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Component": {
                          "default": true,
                          "type": "boolean"
                        },
                        "Name": {
                          "default": false,
                          "type": "boolean"
                        }
                      }
                    },
                    "Match": {
                      "default": "exact",
                      "description": "How to match the namespace with available settings",
                      "type": "string",
                      "enum": [
                        "exact",
                        "partial"
                      ]
                    },
                    "Name": {
                      "type": "string"
                    }
                  }
                }
              },
              "description": "Additional namespaces to use during settings lookups",
              "type": "object"
            },
            "Schedule": {
              "default": "rate(5 mins)",
              "description": "The schedule to run the healthcheck",
              "type": "object"
            },
            "Profiles": {
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Policy": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Placement": {
                  "default": "default",
                  "type": "string"
                },
                "Network": {
                  "default": "default",
                  "type": "string"
                },
                "Deployment": {
                  "contains": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "Alert": {
                  "default": "default",
                  "type": "string"
                },
                "Baseline": {
                  "default": "default",
                  "description": "The profile used to lookup standard services provided by the segment baseline",
                  "type": "string"
                },
                "Testing": {
                  "contains": {
                    "type": "string"
                  },
                  "description": "The testing profiles to apply to the component",
                  "type": "array"
                }
              }
            },
            "Type:Complex": {
              "description": "Complex specific configuration",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "RunTime": {
                  "description": "The runtime to use for the script execution",
                  "type": "string"
                },
                "Memory": {
                  "default": 1024,
                  "description": "The memory to allocate to the script execution",
                  "type": "number"
                },
                "Handler": {
                  "type": "string"
                },
                "Tracing": {
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "Mode": {
                      "type": "string",
                      "enum": [
                        "active",
                        "passthrough"
                      ]
                    }
                  }
                },
                "Image": {
                  "description": "Control the source of the image for the healthcheck script",
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "Source:url": {
                      "description": "Url Source specific Configuration",
                      "additionalProperties": false,
                      "type": "object",
                      "properties": {
                        "ImageHash": {
                          "description": "The expected sha1 hash of the Url if empty any will be accepted",
                          "type": "string"
                        },
                        "Url": {
                          "description": "The Url to the openapi file",
                          "type": "string"
                        }
                      }
                    },
                    "Source": {
                      "default": "registry",
                      "description": "The source of the image - registry: the local hamlet registry - url: an external public url - none: no source image",
                      "type": "string",
                      "enum": [
                        "registry",
                        "url",
                        "none"
                      ]
                    }
                  },
                  "required": [
                    "Source"
                  ]
                }
              },
              "required": [
                "Handler"
              ]
            },
            "ReportRetention": {
              "description": "How long to keep status reports for in days",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Success": {
                  "default": 30,
                  "description": "Successful runs",
                  "type": "object"
                },
                "Failure": {
                  "default": 30,
                  "description": "Failed runs",
                  "type": "object"
                }
              }
            },
            "Links": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
            },
            "Export": {
              "contains": {
                "type": "string"
              },
              "type": "array"
            },
            "Alerts": {
              "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-alert-schema.json"
            },
            "Type:Simple": {
              "description": "Simple healthcheck configuration",
              "additionalProperties": false,
              "type": "object",
              "properties": {
                "Destination": {
                  "description": "The desitination to perform the healthcheck on",
                  "additionalProperties": false,
                  "type": "object",
                  "properties": {
                    "Port": {
                      "description": "The name of a port which outlines the healthcheck and protocol details",
                      "type": "object"
                    },
                    "Hostname": {
                      "description": "An explicit Hostname that will be monitored",
                      "type": "object"
                    },
                    "Link": {
                      "$ref": "https://docs.hamlet.io/schema/latest/blueprint/schema-attributeset-link-schema.json"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "type": "object"
    }
  },
  "$id": "https://docs.hamlet.io/schema/latest/blueprint/schema-component-healthcheck-schema.json"
}
